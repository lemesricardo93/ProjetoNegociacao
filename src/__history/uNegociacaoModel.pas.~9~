unit uNegociacaoModel;

interface
type
  TCabecalhoNegociacao = class
 private
   FNUMPED          : integer;
   FCODPRODUTOR     : integer;
   FCODDISTRIBUIDOR : integer;
   FSTATUS          : string;

 public
   property  numpedCabecalho         : integer  read FNUMPED           write FNUMPED;
   property codprodutorCabecalho     : integer  read FCODPRODUTOR      write FCODPRODUTOR;
   property coddistribuidorcabecalho : integer  read FCODDISTRIBUIDOR  write FCODDISTRIBUIDOR;
   property statusPedido             : string   read FSTATUS           write FSTATUS;


 end;

  TItemCabecalho = class
 private
   FNUMPEDITEM  : integer;
   FCODPROD     : integer;
   FQUANTIDADE  : Double;
   FPRECOVENDA  : Double;

 public
   property  CodigoProdutorLimite     : integer read FCodigoProdutor     write FCodigoProdutor;
   property CodigoDistribuidorLimite  : integer  read FCodigoDistribuidor write FCodigoDistribuidor;
   property ValorLimite : Double read FValorLimite  write FValorLimite;

 end;

implementation

end.
